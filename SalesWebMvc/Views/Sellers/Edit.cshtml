@model SalesWebMvc.Models.ViewModels.SellerFormViewModel;

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid d-flex justify-content-center">
<div>
    <h1 class="names-title">@ViewData["Title"] new Seller</h1>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Seller.Id" />
        <div class="field-form">
            <label asp-for="Seller.Name"> </label><br />
            <span asp-validation-for="Seller.Name" class="text-danger"></span>
            <input asp-for="Seller.Name" class="form-control" required placeholder="Enter your name..." />
        </div>
        <div class="field-form">
            <label asp-for="Seller.Email"> </label><br />
            <span asp-validation-for="Seller.Email" class="text-danger"></span>
            <input asp-for="Seller.Email" type="email" class="form-control" required placeholder="Enter your Email..." />
        </div>
        <div class="field-form">
            <label asp-for="Seller.BirthDate"> </label><br />
            <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            <input asp-for="Seller.BirthDate" class="form-control" required />
        </div>
        <div class="field-form">
            <label asp-for="Seller.BaseSalary"> </label><br />
            <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            <input asp-for="Seller.BaseSalary" type="number" class="form-control" min="0" required placeholder="Enter your Base Salary..." />
        </div>
        <div class="field-form">
            <label asp-for="Seller.DepartmentId" class=""></label>
            <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id","Name"))" class="form-control"> </select>
        </div>
        <div class="field-form">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>

    </form>
</div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}